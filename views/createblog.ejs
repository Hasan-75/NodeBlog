    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">

<div style="margin: 100px">
    <form method="post" action="/blog/create">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group">
                        <input class="form-control" id="title" name="title" placeholder="Title" type="text" required>
                    </div>
                </div>
                <textarea class="form-control" id="content" name="content" placeholder="Content" rows="5"></textarea>
                <br>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <button class="btn pull-right" type="submit">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
